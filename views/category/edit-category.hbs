<section
  class="vh-70 bg-image"
  style="background-image: url('https://mdbootstrap.com/img/Photos/new-templates/search-box/img4.jpg');"
>
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-70">
      <div class="row d-flex justify-content-center align-items-center h-70">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card mt-4" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-3">Sửa Danh Mục</h2>

              <form
                method="POST"
                action="/category/edit-category/{{category.id}}?_method=PUT"
              >
                <div class="form-outline mb-2">
                  <label class="form-label" for="form3Example1cg">Tên Danh Mục</label>
                  <input
                    name="name"
                    type="text"
                    id="name"
                    value="{{category.name}}"
                    class="form-control form-control-lg"
                  />
                </div>
                <div class="form-outline mb-2">
                  <p>Id Category: {{category.idCategory}}</p>
                </div>

                <div class="d-flex justify-content-center mb-2">
                  <button
                    type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"
                  >Sửa Danh Mục</button>
                </div>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>