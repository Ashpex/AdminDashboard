<section class="vh-70 bg-image" style="background-image: url('https://mdbootstrap.com/img/Photos/new-templates/search-box/img4.jpg');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-70">
      <div class="row d-flex justify-content-center align-items-center h-70">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card mt-4" style="border-radius: 15px;">
            <div class="card-body p-5">
              {{#if msg}}
              <div class="alert alert-success">
                {{msg}}
              </div>
              {{/if}}            
<!-- enctype="multipart/form-data" -->
              <h2 class="text-uppercase text-center mb-3">Thêm sản phẩm</h2>

              <form  id="add-product-form" action="/product/add-product" method="POST" enctype="multipart/form-data">
                <div class="form-outline mb-2">
                  <label  class="form-label" for="form3Example1cg">Tên sản phẩm</label>
                  <input name="name" type="text" id="form3Example1cg" class="form-control form-control-lg" />                  
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="form3Example3cg">Chi tiết</label>
                  <textarea
                    class="form-control"
                    id="exampleFormControlTextarea1"
                    rows="3"
                    name="details"
                  ></textarea>
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="form3Example4cg">Giá</label>
                  <input name="price" type="number" id="form3Example4cg" class="form-control form-control-lg" />
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label" for="fileImageProduct">Ảnh</label>
                  <input name="image" type="file" id="fileImageProduct" class="form-control form-control-lg"/>
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label" for="product-category">Danh mục</label>
                  <select
                    id="product-category"
                    name="id_category"
                    class="form-control form-control-lg"
                  >
                    {{#each category}}
                      <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                  </select>
                </div>

                <input type="hidden" name="urlImage" id="url-image">

              </form>

                <div class="d-flex justify-content-center mb-2">
                  <button onclick="myFunction()" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Thêm sản phẩm</button>
                </div>

                <script>
                  function myFunction(){
                    (async () =>{
                      const urlImage = await upload();
                      document.getElementById('url-image').value = urlImage;                
                      document.getElementById('add-product-form').submit();  
                    })();                                                               
                  }
                </script>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

